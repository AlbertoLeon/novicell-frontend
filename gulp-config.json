{
    "debug": true,
    "notifyOnSuccess": false,

    "basePath": "./",
    "distPath": "./dist",
    "bowerPath": "./vendor/bower",
    "pathsToClean": [ "./dist" ],

    "tasks": [
        "build", 
        "styles", 
        "scripts", 
        "images", 
        "icons", 
        "watch",
        "bower",
        "fonts"
    ],

    "tasksToBuild": [
        "bower",
        "styles", 
        "scripts", 
        "images", 
        "icons",
        "fonts"
    ],

    "styles": {
        "dist": "./css",

        "vendorPrefixes": [
            "last 2 version", 
            "safari 5", 
            "ie 8", 
            "ie 9", 
            "opera 12.1", 
            "ios 6", 
            "android 4"
        ]
    },

    "scripts": {
        "dist": "./scripts"
    },

    "images": {
        "dist": "./images",
        "optimizationLevel": 5,
        "progressive": true,
        "interlaced": true
    },

    "icons": {
        "dist": "./images/icons"
    },

    "fonts": {
        "dist": "./fonts"
    },

    "bundles": [{
        "name"      : "master",
        "scripts"   : [ "./scripts/master.js" ],
        "styles"    : [ "./less/master.less" ],
        "images"    : [ "./images/*.{jpg,png}" ],
        "icons"     : [ "./images/icons/*.svg" ],
        "fonts"     : [ "./fonts/*" ]
    },
    {
        "name"      : "vendor",
        "ignores"    : [ "jscs", "jshint" ],
        "scripts"   : [ "./vendor/bootstrap/scripts/**/*.js" ]
    }],

    "watch": {
        "scripts"   : [ 
            "./scripts/**/*.js",
            "./vendor/**/*.js" 
        ],
        "styles"    : [ 
            "./less/**/*.less", 
            "./vendor/**/*.less" 
        ],
        "images"    : [ "./images/*" ],
        "icons"     : [ "./images/icons/*" ],
        "fonts"     : [ "./fonts/*" ]
    },

    "livereload": {
        "port": 1337, 
        "paths": [
            "./dist/scripts/*.js",
            "./dist/css/*.css",
            "./macroScripts/*.{cshtml,master,xslt,php,phtml,html}",
            "./MasterPages/*.{cshtml,master,xslt,php,phtml,html}"
        ]
    }
}