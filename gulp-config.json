/*
Gulp installation:
-------------------
cd c:\"Visual studio projects"\project-name\Project.Website
npm install

Start Gulp
-------------------
cd c:\"Visual studio projects"\project-name\Project.Website
gulp watch // for starting listening for file changes
gulp build // for building all resources

Stop / restart Gulp
-------------------
ctrl + c
run gulp command to start gulp again


*/
{
    "debug": false,
    "notifyOnSuccess": false,

    "path": "./",
    
    "tasks": [
        "build", 
        "styles", 
        "scripts", 
        "images", 
        "icons", 
        "watch", 
        "livereload"
    ],

    "tasksToBuild": [
        "styles", 
        "scripts", 
        "images", 
        "icons"
    ],

    "pathsToClean": [ "dist" ],

    "styles": {
        "dist": "dist/css",

        "vendorPrefixes": [
            "last 2 version", 
            "safari 5", 
            "ie 8", 
            "ie 9", 
            "opera 12.1", 
            "ios 6", 
            "android 4"
        ]
    },

    "scripts": {
        "dist": "dist/scripts"
    },

    "images": {
        "dist": "dist/images",
        "optimizationLevel": 5,
        "progressive": true,
        "interlaced": true
    },

    "icons": {
        "dist": "dist/images/icons"
    },

    "bundles": [{
        "name"      : "app",
        "scripts"   : [ "scripts/master.js" ],
        "styles"    : [ "less/master.less" ],
        "images"    : [ "images/*.{jpg,png}" ],
        "icons"     : [ "images/icons/*.svg" ]
    },
    {
        "name"      : "mapComponent",
        "scripts"   : [ "scripts/components/map.js" ],
        "styles"    : [ "less/components/map.less" ]
    },
    {
        "name"      : "vendor",
        "scripts"   : [ "vendor/bootstrap/scripts/*" ],
        "styles"    : [ "vendor/bootstrap/less/*" ]
    }],

    "watch": {
        "scripts"   : [ "scripts/**/*.js" ],
        "styles"    : [ "less/**/*.less" ],
        "images"    : [ "images/*" ],
        "icons"     : [ "images/icons/*" ]
    },

    "livereload": {
        "port": 1337,
        "paths": [
            "dist/scripts/*.js",
            "dist/styles/*.css",
            "macroScripts/*.{cshtml,master,xslt,php,phtml,html}",
            "MasterPages/*.{cshtml,master,xslt,php,phtml,html}"
        ]
    }
}