{
    "debug": false,
    "notifyOnSuccess": false,

    "path": "./",
    "bowerDir": "./vendor/bower",

    "tasks": [
        "build", 
        "styles", 
        "scripts", 
        "images", 
        "icons", 
        "watch",
        "bower"
    ],

    "tasksToBuild": [
        "styles", 
        "scripts", 
        "images", 
        "icons",
        "bower"
    ],

    "pathsToClean": [ "./dist" ],

    "styles": {
        "dist": "./dist/css",

        "vendorPrefixes": [
            "last 2 version", 
            "safari 5", 
            "ie 8", 
            "ie 9", 
            "opera 12.1", 
            "ios 6", 
            "android 4"
        ]
    },

    "scripts": {
        "dist": "./dist/scripts"
    },

    "images": {
        "dist": "./dist/images",
        "optimizationLevel": 5,
        "progressive": true,
        "interlaced": true
    },

    "icons": {
        "dist": "./dist/images/icons"
    },

    "bundles": [{
        "name"      : "master",
        "scripts"   : [ "./scripts/master.js" ],
        "styles"    : [ "./less/master.less" ],
        "images"    : [ "./images/*.{jpg,png}" ],
        "icons"     : [ "./images/icons/*.svg" ]
    },
    {
        "name"      : "vendor",
        "scripts"   : [ "./vendor/bootstrap/scripts/**/*.js" ]
    }],

    "watch": {
        "scripts"   : [ 
            "./scripts/**/*.js",
            "./vendor/**/*.js" 
        ],
        "styles"    : [ 
            "./less/**/*.less", 
            "./vendor/**/*.less" 
        ],
        "images"    : [ "./images/*" ],
        "icons"     : [ "./images/icons/*" ]
    },

    "livereload": {
        "port": 1337, 
        "paths": [
            "./dist/scripts/*.js",
            "./dist/css/*.css",
            "./macroScripts/*.{cshtml,master,xslt,php,phtml,html}",
            "./MasterPages/*.{cshtml,master,xslt,php,phtml,html}"
        ]
    }
}